from kivy.app import App
from kivy.uix.gridlayout import GridLayout
from kivy.uix.label import Label
from kivy.uix.screenmanager import ScreenManager, Screen

class MainScreen(Screen):
    def __init__(self, **kwargs):
        super(MainScreen, self).__init__(**kwargs)
        
        # Create a GridLayout with two rows and one column
        layout = GridLayout(rows=2)
        
        # Add a Label widget to the first row of the GridLayout
        label1 = Label(text='Hello, World!')
        layout.add_widget(label1)
        
        # Add another Label widget to the second row of the GridLayout
        label2 = Label(text='This is the main screen')
        layout.add_widget(label2)
        
        # Add the GridLayout to the MainScreen
        self.add_widget(layout)

class SecondScreen(Screen):
    def __init__(self, **kwargs):
        super(SecondScreen, self).__init__(**kwargs)
        
        # Create a GridLayout with one row and one column
        layout = GridLayout(rows=1)
        
        # Add a Label widget to the GridLayout
        label = Label(text='This is the second screen')
        layout.add_widget(label)
        
        # Add the GridLayout to the SecondScreen
        self.add_widget(layout)

class ScreenManagement(ScreenManager):
    pass

class Smartfridge(App):
    def build(self):
        sm = ScreenManagement()
        sm.add_widget(MainScreen(name='main'))
        sm.add_widget(SecondScreen(name='second'))
        
        return sm

if __name__ == '__main__':
    Smartfridge().run()
